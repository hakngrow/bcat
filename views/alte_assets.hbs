<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body p-0">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Symbol</th>
                                <th>Name</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each assets}}
                            <tr>
                                <td>{{inc @index}}</td>
                                <td>{{symbol}}</td>
                                <td>{{name}}</td>
                                <td>{{getAssetType type}}</td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/assets/edit/{{symbol}}">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/assets/delete/{{symbol}}">
                                        <i class="fas fa-trash">
                                        </i>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <div class="col-md-8">
            <a href="/assets/new" class="btn btn-primary float-right">New Asset</a>
        </div>
    </div>
</div>