<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body p-0">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Symbol</th>
                                <th>Name</th>
                                <th>Total Supply</th>
                                <th>Address</th>
                                <th>Decimals</th>
                                <th>Gateway Id</th>
                                <th>Paused</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each tokens}}
                            <tr>
                                <td>{{inc @index}}</td>
                                <td>{{symbol}}</td>
                                <td>{{name}}</td>
                                <td>{{totalSupply}}</td>
                                <td>{{address}}</td>
                                <td>{{decimals}}</td>
                                <td>{{gatewayId}}</td>
                                <td>{{getYesNo paused}}</td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/tokens/edit/{{symbol}}">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <div class="col-md-12">
            <a href="/tokens/new" class="btn btn-primary float-right">New Token</a>
        </div>
    </div>
</div>