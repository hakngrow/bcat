<!-- Toastr -->
<script src="/plugins/toastr/toastr.min.js"></script>
<script>
    {{#unless (isUndefined status)}}

    $(function() {

        toastr.info('{{status}}')
    })
    {{/unless}}
</script>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body p-0">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Symbol</th>
                                <th>Name</th>
                                <th>Total Supply</th>
                                <th>Address</th>
                                <th>Decimals</th>
                                <th>Gateway Id</th>
                                <th>Paused</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each tokens}}
                            <tr>
                                <td>{{inc @index}}</td>
                                <td>{{symbol}}</td>
                                <td>{{name}}</td>
                                <td>{{totalSupply}}</td>
                                <td>{{address}}</td>
                                <td>{{decimals}}</td>
                                <td>{{gatewayId}}</td>
                                <td>{{getYesNo paused}}</td>
                                <td class="project-actions text-right">
                                    {{#if paused}}
                                    <a class="btn btn-success btn-sm" href="/tokens/unpause/{{address}}">
                                        <i class="fas fa-check-circle">
                                        </i>
                                    </a>
                                    {{else}}
                                    <a class="btn btn-danger btn-sm" href="/tokens/pause/{{address}}">
                                        <i class="fas fa-stop-circle">
                                        </i>
                                    </a>
                                    {{/if}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>