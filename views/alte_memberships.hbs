<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body p-0">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Strategy</th>
                                <th>Asset</th>
                                <th>Trader</th>
                                <th>Fund Size</th>
                                <th>Tokens</th>
                                <th>Members</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each communities}}
                            <tr>
                                <td>{{inc @index}}</td>
                                <td>{{name}}</td>
                                <td>{{getCommunityType type}}</td>
                                <td>{{strategy}}</td>
                                <td>{{assetSymbol}}</td>
                                <td>{{traderId}}</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/mbrshps/info/{{_id}}">
                                        <i class="fas fa-info-circle">
                                        </i>
                                    </a>
                                    {{#unless (isCommunityMember _id ../joinedCommunityIds)}}
                                    <a class="btn btn-success btn-sm" href="/mbrshps/join/users/{{../payload.userId}}/comms/{{_id}}">
                                        <i class="fas fa-cart-arrow-down">
                                        </i>
                                    </a>
                                    {{/unless}}
                                    <!--
                                    <button type="button" class="btn btn-success btn-sm" data-toggle="modal"
                                        data-target="#exampleModal" data-whatever="{{_id}}">
                                        <i class="fas fa-cart-arrow-down">
                                        </i>
                                    </button>-->
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>

