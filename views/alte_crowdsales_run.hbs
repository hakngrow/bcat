<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Run Crowdsale</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form name="frmToken" method="post" action="/crowdsales/deploy">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="selToken">Token</label>
                            <select class="form-control select2bs4" id="selToken" name="selToken" style="width: 100%;">
                                {{#each tokens}}
                                <option value="{{address}}">{{name}} ({{symbol}})</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="txtRate">Rate</label>
                            <input type="text" class="form-control" id="txtRate" name="txtRate" placeholder="Rate">
                        </div>
                        <div class="form-group">
                            <label for="txtWallet">Wallet</label>
                            <input type="text" class="form-control" id="txtWallet" name="txtWallet" placeholder="Wallet">
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-6">
                                <button href="/home" class="btn btn-secondary">Cancel</button>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary float-right">Deploy</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
