<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title">Delete User : {{user.userId}}</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form name="frmUser" method="post" action="/users/remove/{{user.userId}}" >
                    <div class="card-body">

                        <div class="form-group">
                            <label for="selType">Type</label>
                            <select class="form-control select2bs4" name="selType" value="{{user.type}}" style="width: 100%;">
                                <option value="A" {{#if (isAdmin user.type)}}selected{{/if}}>Admin</option>
                                <option value="I" {{#if (isInvestor user.type)}}selected{{/if}}>Investor</option>
                                <option value="T" {{#if (isTrader user.type)}}selected{{/if}}>Trader</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="txtName">Name</label>
                            <input type="text" class="form-control" name="txtName" placeholder="Name" value="{{user.name}}">
                        </div>
                        <div class="form-group">
                            <label for="txtPassword">Password</label>
                            <input type="password" class="form-control" name="txtPassword" placeholder="Password" value="{{user.password}}">
                        </div>
                        <div class="form-group">
                            <label for="txtPassword">Wallet</label>
                            <input type="text" class="form-control" name="txtWallet" placeholder="Wallet Address" value="{{user.wallet}}">
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-6">
                                <a href="/users" class="btn btn-secondary">Cancel</a>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-danger float-right">Delete</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>