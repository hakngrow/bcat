<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Pauser</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form name="frmToken" method="post" action="/tokens/processPauser" >
                    <div class="card-body">
                        <label for="selAction">Action</label>
                        <div class="form-group">
                            <select class="form-control select2bs4" id="selAction" name="selAction" style="width: 100%;">
                                <option value="A">Add</option>
                                <option value="R">Renounce</option>
                                <option value="C">Check</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="selToken">Token</label>
                            <select class="form-control select2bs4" id="selToken" name="selToken" style="width: 100%;">
                                {{#each tokens}}
                                <option value="{{address}}">{{name}} ({{symbol}})</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="txtPauser">Address</label>
                            <input type="text" class="form-control" id="txtPauser" name="txtPauser" placeholder="Address">
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-6">
                                <button href="/home" class="btn btn-secondary">Cancel</button>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary float-right">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
