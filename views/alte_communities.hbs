<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body p-0">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Strategy</th>
                                <th>Asset</th>
                                <th>Trader</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each comms}}
                            <tr>
                                <td>{{inc @index}}</td>
                                <td>{{name}}</td>
                                <td>{{getCommunityType type}}</td>
                                <td>{{strategy}}</td>
                                <td>{{assetSymbol}}</td>
                                <td>{{traderId}}</td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/comms/edit/{{_id}}">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/comms/delete/{{_id}}">
                                        <i class="fas fa-trash">
                                        </i>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <div class="col-md-12">
            <a href="/comms/new" class="btn btn-primary float-right">New Community</a>
        </div>
    </div>
</div>