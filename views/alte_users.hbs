<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body p-0">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>User Id</th>
                                <th>Type</th>
                                <th>Name</th>
                                <th>Password</th>
                                <th>Wallet</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr>
                                <td>{{inc @index}}</td>
                                <td>{{userId}}</td>
                                <td>{{getUserType type}}</td>
                                <td>{{name}}</td>
                                <td>{{password}}</td>
                                <td>{{wallet}}</td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/users/edit/{{userId}}">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/users/delete/{{userId}}">
                                        <i class="fas fa-trash">
                                        </i>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <div class="col-md-12">
            <a href="/users/new" class="btn btn-primary float-right">New User</a>
        </div>
    </div>
</div>